class Employee{
String name;
int salary;
static String companyName = "Xyz Enterprisers";

public int bonus(){
bonus=bonus+1000;
return bonus;
}

public void attendence(boolean a){

  if(a==true){
  System.out.prinltn("Employee is present");
  }
  else{
  System.out.println("Employee is absent");
  }
}

public static void main(String args[]){
Employee e = new Employee();
e.name = "Robert";
e.salary = 120000;

System.out.println("Name : "+e.name);
System.out.println("Company Name : "+companyName);
System.out.println("Salary : "+e.salary);
System.out.println("Salary after Bonus is "+e.bonus());

}

}
